@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usu√°rio";
} 
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" required />
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-dark"/>
    </form>
</div>