@{
    ViewData["Title"] = "Login";
}
<!--<div class="container">-->
    <div class="row justify-content-md-center">
        <div class="jumbotron col-6">
            <h1>Bem vindo ao sistema!</h1>
            <form asp-action="Login" method="POST">
                <h5>Usuario</h5>
                <div class="form-group">
                    <input type="text" placeholder="Informe seu login de usuário" class="form-control" name="login" />
                </div>
                <h5>Senha</h5>
                <div class="form-group">
                    <input type="password" placeholder="Insira sua senha" class="form-control" name="senha"/>
                </div>
                <p>Não é cadastrado? Acesse o link <a href="/Usuario/Cadastro">Cadastro</a></p>
                <input type="submit" class="btn btn-dark btn-lg" value="Entrar" />
            </form>
            <p class="text-danger">@ViewData["Erro"]</p>
        </div>
    </div>
<!--</div> -->